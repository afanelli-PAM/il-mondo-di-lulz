<%- include('../partials/header') %>

    <section class="dashboard-section">
        <div class="container">
            <div class="dashboard-header">
                <h1>Dettagli e Attività Utente</h1>
                <p>Profilo di <%= user.nome %> <%= user.cognome %></p>
            </div>

            <div class="chart-grid">
                <!-- Info Profilo -->
                <div class="chart-card">
                    <h3>Scheda Personale</h3>
                    <div class="info-item">
                        <span class="info-label">Email</span>
                        <span class="info-value"><%= user.email %></span>
                    </div>
                    <div class="info-item" style="margin-top:0.5rem;">
                        <span class="info-label">Stato Email</span>
                        <span class="info-value">
                          <% if (user.email_verified) { %>
                            <span style="color:#4caf50;font-weight:600;">&#10003; Verificata</span>
                          <% } else { %>
                            <span style="color:#ff9800;font-weight:600;">&#9888; Non verificata</span>
                          <% } %>
                        </span>
                    </div>
                    <div class="info-item" style="margin-top:0.5rem;">
                        <span class="info-label">Nascita</span>
                        <span class="info-value"><%= user.data_nascita %> a <%= user.luogo_nascita %></span>
                    </div>
                    <div class="info-item" style="margin-top:0.5rem;">
                        <span class="info-label">Segno</span>
                        <span class="info-value"><%= user.segno_zodiacale %></span>
                    </div>
                    <div class="info-item" style="margin-top:0.5rem;">
                        <span class="info-label">Registrato il</span>
                        <span class="info-value"><%= new Date(user.created_at).toLocaleString('it-IT') %></span>
                    </div>
                </div>

                <!-- Risposte al Form -->
                <div class="chart-card">
                    <h3>Dati dal Form</h3>
                    <div class="info-item">
                        <span class="info-label">Come ti vedono</span>
                        <p class="info-value" style="font-weight:normal;font-size:0.9rem;"><%= user.come_ti_vedono || 'N/D' %></p>
                    </div>
                    <div class="info-item" style="margin-top:0.5rem;">
                        <span class="info-label">Come sei realmente</span>
                        <p class="info-value" style="font-weight:normal;font-size:0.9rem;"><%= user.come_sei || 'N/D' %></p>
                    </div>
                    <div class="info-item" style="margin-top:0.5rem;">
                        <span class="info-label">Attività/Aspirazioni</span>
                        <p class="info-value" style="font-weight:normal;font-size:0.9rem;"><%= user.attivita_aspirazioni || 'N/D' %></p>
                    </div>
                </div>
            </div>

            <!-- Attività Oracolo -->
            <div class="chart-card" style="margin-top:1.5rem;">
                <h3>Richieste all'Oracolo</h3>
                <% if (oracleActivity && oracleActivity.length > 0) { %>
                    <div class="aspects-list">
                        <% oracleActivity.forEach(msg => { %>
                            <div class="aspect-item" style="flex-direction:column;gap:0.3rem;">
                                <div style="display:flex;justify-content:space-between;">
                                    <span class="aspect-type">Domanda</span>
                                    <small style="color:var(--text-muted);"><%= new Date(msg.created_at).toLocaleString('it-IT') %></small>
                                </div>
                                <p style="font-style:italic;"><%= msg.domanda %></p>
                                <div style="margin-top:0.5rem;color:var(--gold-light);">
                                    <strong>Risposta:</strong> <%= msg.risposta || 'In attesa...' %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p style="text-align:center;color:var(--text-muted);">Nessuna interazione con l'oracolo.</p>
                <% } %>
            </div>

            <!-- Azioni -->
            <div class="form-actions" style="margin-top:2rem;display:flex;gap:1rem;flex-wrap:wrap;align-items:center;">
                <a href="/admin/users" class="btn btn-secondary">&larr; Torna alla Lista</a>

                <form action="/admin/users/<%= user.id %>/delete" method="POST"
                      onsubmit="return confirm('Eliminare definitivamente l\'utente <%= user.nome %> ?\nL\'operazione è irreversibile e invierà una email di conferma.')">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit"
                        style="padding:0.6rem 1.2rem;font-size:0.9rem;background:#6b1212;color:#ffcccc;
                               border:1px solid #9b2020;cursor:pointer;border-radius:6px;font-family:inherit;">
                        ✕ Elimina questo utente
                    </button>
                </form>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>
